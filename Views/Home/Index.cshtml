@{
    ViewData["Title"] = "Upload File";
    var uploadedImages = ViewBag.UploadedImages as List<string>;
}

<h2>Upload File</h2>

<form asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit">Upload</button>
</form>

@if (uploadedImages != null && uploadedImages.Count > 0)
{
    <h3>Uploaded Images</h3>
    <ul>
        @foreach (var imageUrl in uploadedImages)
        {
            <li>
                <img src="@imageUrl" alt="Uploaded Image" width="200" />
                <p>@imageUrl</p>
            </li>
        }
    </ul>
}
